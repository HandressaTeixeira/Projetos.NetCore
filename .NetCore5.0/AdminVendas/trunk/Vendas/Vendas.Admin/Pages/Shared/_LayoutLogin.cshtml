<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vendas.Admin</title>
    <partial name="~/Pages/Shared/Referencias/_CssLogin.cshtml" />
</head>
<body>
    <div id="wrapper">
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Vendas.Admin</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <partial name="~/Pages/Shared/Referencias/_JsLogin.cshtml" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
